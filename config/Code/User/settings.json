{
    "editor.lineNumbers": "relative",
    "workbench.startupEditor": "none",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.location": "hidden",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontFamily": "Iosevka Nerd Font",
    "editor.fontLigatures": true,
    "editor.tabCompletion": "on",
    "editor.cursorBlinking": "solid",
    "workbench.productIconTheme": "fluent-icons",
    "editor.tabSize": 2,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.minimap.renderCharacters": false,
    "workbench.editor.tabSizingFixedMaxWidth": 100,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.tabSizing": "fixed",
    "workbench.editor.tabSizingFixedMinWidth": 40,
    "dart.previewFlutterUiGuides": true,
    "dart.hotReloadOnSave": "manual",
    "editor.wordWrap": "on",
    "zenMode.centerLayout": true,
    "workbench.iconTheme": "ayu",

    "[blade]": {
        "editor.defaultFormatter": "shufo.vscode-blade-formatter"
    },
    "[json][jsonc]": {
        "editor.formatOnSave": false
    },
    "[dart]": {
        "editor.formatOnSave": true
    },
    // dart
    "explorer.confirmDelete": false,
    "task.verboseLogging": true,
    "dart.debugExternalPackageLibraries": true,
    "dart.debugSdkLibraries": true,
    "dart.hotReloadProgress": "statusBar",
    "dart.previewHotReloadOnSaveWatcher": true,
    "dart.flutterAdditionalArgs": [
        "-v"
    ],
    "dart.flutterShowEmulators": "always",
    "dart.previewFlutterUiGuidesCustomTracking": true,
    "dart.includeDependenciesInWorkspaceSymbols": false,

    // // vscode vim
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1,
        "asvetliakov.vscode-neovim": 1
    },
    // "vscode-neovim.neovimExecutablePaths.linux" : "/usr/bin/nvim",
    // "vscode-neovim.neovimInitVimPaths.linux" : "$HOME/.config/nvim/init.lua",
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-k>": false
    },

    // vim -- normal
    "vim.normalModeKeyBindings": [
        {
            "before": [ " " ],
            "after": [ "<leader>" ],
        },
        {
            "before": [ "g", "r" ],
            "commands": [ "editor.action.quickFix" ]
        },
        {
            "before": [ "g", "K" ],
            "commands": [ "editor.action.showHover" ]
        },
        {
            "before": [ "leader","f", "h" ],
            "commands": [ "flutter.hotReload" ]
        },
        {
            "before": [ "leader","f", "r" ],
            "commands": [ "flutter.hotRestart" ]
        },
    ],

    // vim -- normal non recursive
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ ";" ], "after": [ ":" ]
        },
        {
            "before": [ "K" ], "after": [ "g", "t" ]
        },
        {
            "before": [ "J" ], "after": [ "g", "T" ]
        },
        {
            "before": [ "<leader>", "%" ],
            "commands": [ "editor.emmet.action.matchTag" ]
        },

        {
            "before": [ "<leader>", "t" ],
            "command": "workbench.action.terminal",
            "when": "editorTextFocus || terminalFocus || vim.active && !inDebugRepl"
        },


        // split, korbanin % -> | buat matchtag (web element hadeh)
        {
            "before": [ "<leader>", "\"" ],
            "commands": [ ":split" ]
        },
        {
            "before": [ "<leader>", "|" ],
            "commands": [ ":vsplit" ]
        },
        {
            "before": [ "<leader>", "e" ],
            "commands": [ "workbench.action.toggleSidebarVisibility" ]
        },
        {
            "before": ["<leader>", "c"],
            "commands": ["workbench.action.toggleAuxiliaryBar"]
        },

        {
            "before": [ "<leader>", "f" ],
            "commands": [ "revealInExplorer" ],
        },
        {
            "before": [ "<leader>", "w" ],
            "commands": [ ":bdelete" ],
        },
        {
            "before": [ "<C-p>" ],
            "commands": [ "workbench.action.quickOpen" ],
        },
    ],
    
    // vim -- visual
    "vim.visualModeKeyBindings": [
        {
            "before": [ " " ],
            "after": [ "<leader>" ],
        },
        {
            "before": [ ">" ],
            "commands": [ "editor.action.indentLines" ]
        },
        {
            "before": [ "<" ],
            "commands": [ "editor.action.outdentLines" ]
        },
        {
            "before": [ "K" ],
            "commands": [ "editor.action.moveLinesUpAction"]
        },
        {
            "before": [ "J" ],
            "commands": [ "editor.action.moveLinesDownAction"]
        },
        {
            "before": [ "<leader>", "%" ],
            "commands": [ "editor.emmet.action.matchTag" ]
        },
        {
        // Rename symbol with leader+r+e
        "before": ["<leader>", "r", "e"],
        "commands": ["editor.action.rename"]
        },
    ],
    
    // vim -- visual non recursive
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [ "p" ],
            "after": ["P"]
        },
    ],
    "workbench.colorTheme": "Serendipity Midnight Electric",
    "terminal.integrated.fontFamily": "Iosevka Nerd Font",
    "errorLens.enabled": false,
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "window.titleBarStyle": "native",
    "window.menuBarVisibility": "hidden",
    "github.copilot.nextEditSuggestions.enabled": true,
    "emmet.includeLanguages": {
    "blade": "html"
    },
    "vscode-pets.petSize": "medium",
    "vscode-pets.petColor": "warrior",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "right",
    "editor.fontSize": 17,
    "editor.stickyScroll.maxLineCount": 2,
    "window.density.editorTabHeight": "compact",
    "phpParameterHint.onChange": false,
}